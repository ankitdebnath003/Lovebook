{% extends 'base.html.twig' %}

{% block title %} Forgot {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.style.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}

{% block body %}

    <div class="container">
        {% if flag == 1 %}
            <p class="text-danger errormsg">{{ msg }}</p>
        {% endif %}
        {% if flag == 2 %}
            <p class="text-success errormsg">{{ msg }}</p>
        {% endif %}
        <form action="/passchange/{{ email }}" method="post">
            <h2>Set new Password :</h2>
            <div class="form-group" class="same" id="pass">
                <label for="password">Password :</label>
                <div class="inner">
                    <input id="password" type="password" required class="form-control" name="password">
                </div>
            </div>
            <div class="form-group" class="same" id="confpass">
                <label for="confirmpassword">Confirm Password :</label>
                <div class="pass">
                    <input id="confirmpassword" required type="password" class="form-control" name="confirmpassword">
                    <div>
                        <i id="wrong" class="fa-solid fa-xmark"></i>
                    </div>
                    <div>
                        <i id="correct" class="fa-solid fa-check"></i>
                    </div>
                </div>
            </div>
            <input type="submit" class="mt-3 btn btn-primary" name="genpassword" value="SUBMIT"></input>
            {% if flag == 2 %}
                <a class="loginbtn btn btn-primary" href="/login">Login Now</a>
            {% endif %}
        </form>
    </div>

{% endblock %}