{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/loader.style.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
    <script src="{{ asset('js/loader.js') }}"></script>
{% endblock %}

{% block body %}

    {% if flag == 2 %}
        <p class="errormsg">{{ msg }}</p>
    {% endif %}
    <!-- creating a form with username and password for login -->
    <div class="container">
        <form action="/loginform" method="post">
            <h1>LOGIN</h1>
            <div class="form-group my-4">
                <label for="username">Username</label>
                <input id="username" type="text" class="form-control" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" type="password" class="form-control" name="password">
            </div>
            <a href="/forget">Forgot Password?</a>
            <input type="submit" onclick="loadLoader()" class="mt-3 btn btn-primary" name="login" value="LOGIN"></input>
            <div class="sign">
                <p>Don't Have An Account?</p>
                <a href="/register">SIGN UP</a>
            </div>
        </form>
    </div>
{% endblock %}
